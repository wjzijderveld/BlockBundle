<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cmf_block.simple_admin.class">Symfony\Cmf\Bundle\BlockBundle\Admin\SimpleBlockAdmin</parameter>
        <parameter key="cmf_block.simple_document.class">Symfony\Cmf\Bundle\BlockBundle\Doctrine\Phpcr\SimpleBlock</parameter>

        <parameter key="cmf_block.action_admin.class">Symfony\Cmf\Bundle\BlockBundle\Admin\ActionBlockAdmin</parameter>
        <parameter key="cmf_block.action_document.class">Symfony\Cmf\Bundle\BlockBundle\Doctrine\Phpcr\ActionBlock</parameter>

        <parameter key="cmf_block.container_admin.class">Symfony\Cmf\Bundle\BlockBundle\Admin\ContainerBlockAdmin</parameter>
        <parameter key="cmf_block.container_document.class">Symfony\Cmf\Bundle\BlockBundle\Doctrine\Phpcr\ContainerBlock</parameter>

        <parameter key="cmf_block.reference_admin.class">Symfony\Cmf\Bundle\BlockBundle\Admin\ReferenceBlockAdmin</parameter>
        <parameter key="cmf_block.reference_document.class">Symfony\Cmf\Bundle\BlockBundle\Doctrine\Phpcr\ReferenceBlock</parameter>

        <parameter key="cmf_block.string_admin.class">Symfony\Cmf\Bundle\BlockBundle\Admin\StringBlockAdmin</parameter>
        <parameter key="cmf_block.string_document.class">Symfony\Cmf\Bundle\BlockBundle\Doctrine\Phpcr\StringBlock</parameter>
    </parameters>

    <services>

        <service id="cmf.block.admin.base.extension" class="Symfony\Cmf\Bundle\BlockBundle\Admin\BaseAdminExtension" />

        <service id="cmf_block.simple_admin" class="%cmf_block.simple_admin.class%">
            <tag name="sonata.admin" manager_type="doctrine_phpcr" group="dashboard.group_content" label_catalogue="CmfBlockBundle" label="dashboard.label_simple_block" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>%cmf_block.simple_document.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setContentRoot">
                <argument>%cmf_block.content_basepath%</argument>
            </call>
        </service>

        <service id="cmf_block.action_admin" class="%cmf_block.action_admin.class%">
            <tag name="sonata.admin" manager_type="doctrine_phpcr" group="dashboard.group_content" label_catalogue="CmfBlockBundle" label="dashboard.label_action_block" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>%cmf_block.action_document.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setContentRoot">
                <argument>%cmf_block.content_basepath%</argument>
            </call>
        </service>

        <service id="cmf_block.container_admin" class="%cmf_block.container_admin.class%">
            <tag name="sonata.admin" manager_type="doctrine_phpcr" group="dashboard.group_content" label_catalogue="CmfBlockBundle" label="dashboard.label_container_block" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>%cmf_block.container_document.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setContentRoot">
                <argument>%cmf_block.content_basepath%</argument>
            </call>
        </service>

        <service id="cmf_block.reference_admin" class="%cmf_block.reference_admin.class%">
            <tag name="sonata.admin" manager_type="doctrine_phpcr" group="dashboard.group_content" label_catalogue="CmfBlockBundle" label="dashboard.label_reference_block" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>%cmf_block.reference_document.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setContentRoot">
                <argument>%cmf_block.content_basepath%</argument>
            </call>
        </service>

        <service id="cmf_block.string_admin" class="%cmf_block.string_admin.class%">
            <tag name="sonata.admin" manager_type="doctrine_phpcr" group="dashboard.group_content" label_catalogue="CmfBlockBundle" label="dashboard.label_string_block" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>%cmf_block.string_document.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setContentRoot">
                <argument>%cmf_block.content_basepath%</argument>
            </call>
        </service>

    </services>
</container>
