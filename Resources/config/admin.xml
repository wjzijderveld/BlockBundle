<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cmf_block.simple_admin_class">Symfony\Cmf\Bundle\BlockBundle\Admin\SimpleBlockAdmin</parameter>
        <parameter key="cmf_block.simple_document_class">Symfony\Cmf\Bundle\BlockBundle\Doctrine\Phpcr\SimpleBlock</parameter>
    </parameters>

    <services>
        <service id="cmf_block.simple_admin" class="%cmf_block.simple_admin_class%">
            <tag name="sonata.admin" manager_type="doctrine_phpcr" group="dashboard.group_content" label_catalogue="CmfBlockBundle" label="dashboard.label_simple_block" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>%cmf_block.simple_document_class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setContentRoot">
                <argument>%cmf_block.content_basepath%</argument>
            </call>
        </service>

        <service id="cmf.block.admin.base.extension" class="Symfony\Cmf\Bundle\BlockBundle\Admin\BaseAdminExtension" >
        </service>

    </services>
</container>
